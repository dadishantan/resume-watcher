{
    "manifest_version": 3,
    "name": "Resume Watcher",
    "version": "1.0",
    "description": "Track who opens your resume.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "notifications"]
  }
  